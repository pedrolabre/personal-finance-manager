<!-- CartoesListView.xaml -->
<UserControl
    x:Class="PersonalFinanceManager.Views.Cartoes.CartoesListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- CabeÃ§alho -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="CartÃµes de CrÃ©dito" 
                      Style="{StaticResource TitleTextBlockStyle}"
                      VerticalAlignment="Center"/>
            
            <Button Content="âž• Novo CartÃ£o"
                   Command="{Binding NovoCartaoCommand}"
                   Style="{StaticResource PrimaryButtonStyle}"                   Height="40"
                   MinWidth="150"                   HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- Barra de Filtros -->
        <Border Grid.Row="1" 
               Style="{StaticResource CardStyle}"
               Margin="0,0,0,20"
               Padding="15">
            <Grid>
                <CheckBox IsChecked="{Binding MostrarInativos}"
                         Content="Mostrar cartÃµes inativos"
                         VerticalAlignment="Center"/>
                
                <Button Content="ðŸ”„ Atualizar"
                       Command="{Binding AtualizarCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        
        <!-- Grid de CartÃµes -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Cartoes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" 
                               Margin="10"
                               MinHeight="200">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Nome e Status -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nome}"
                                                  FontSize="20"
                                                  FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Banco}"
                                                  Foreground="{StaticResource TextSecondaryColor}"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <Border Background="{StaticResource SuccessColor}"
                                           CornerRadius="3"
                                           Padding="8,4"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Visibility="{Binding Ativo, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="ATIVO"
                                                  Foreground="White"
                                                  FontSize="10"
                                                  FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                                
                                <!-- InformaÃ§Ãµes -->
                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <Grid Margin="0,0,0,8">
                                        <TextBlock Text="Vencimento:"
                                                  Foreground="{StaticResource TextSecondaryColor}"/>
                                        <TextBlock Text="{Binding DiaVencimento, StringFormat=Dia {0}}"
                                                  HorizontalAlignment="Right"
                                                  FontWeight="SemiBold"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <TextBlock Text="Fechamento:"
                                                  Foreground="{StaticResource TextSecondaryColor}"/>
                                        <TextBlock Text="{Binding DiaFechamento, StringFormat=Dia {0}}"
                                                  HorizontalAlignment="Right"
                                                  FontWeight="SemiBold"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <TextBlock Text="Limite:"
                                                  Foreground="{StaticResource TextSecondaryColor}"/>
                                        <TextBlock Text="{Binding Limite, StringFormat=C}"
                                                  HorizontalAlignment="Right"
                                                  FontWeight="SemiBold"/>
                                    </Grid>
                                    
                                    <Separator Margin="0,10"/>
                                    
                                    <Grid Margin="0,10,0,0">
                                        <TextBlock Text="Total em DÃ­vidas:"
                                                  Foreground="{StaticResource TextSecondaryColor}"/>
                                        <TextBlock Text="{Binding TotalDividas, StringFormat=C}"
                                                  HorizontalAlignment="Right"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource DangerColor}"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Progresso de UtilizaÃ§Ã£o -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,15"
                                           Visibility="{Binding Limite, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="UtilizaÃ§Ã£o do Limite"
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryColor}"
                                              Margin="0,0,0,5"/>
                                    <ProgressBar Height="12"
                                                Value="{Binding PercentualUtilizado, Mode=OneWay}"
                                                Maximum="100"
                                                Foreground="{StaticResource DangerColor}"/>
                                    <TextBlock Text="{Binding PercentualUtilizado, Mode=OneWay, StringFormat={}{0:F1}%}"
                                              HorizontalAlignment="Center"
                                              FontSize="11"
                                              Margin="0,3,0,0"/>
                                </StackPanel>
                                
                                <!-- BotÃµes de AÃ§Ã£o -->
                                <StackPanel Grid.Row="3" 
                                           Orientation="Horizontal"
                                           HorizontalAlignment="Center">
                                    <Button Content="ðŸ“‹"
                                           Command="{Binding DataContext.VisualizarPendenciasCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                           CommandParameter="{Binding Id}"
                                           ToolTip="Ver PendÃªncias"
                                           Width="26"
                                           Height="26"
                                           Margin="2"
                                           FontSize="11"
                                           Style="{StaticResource SecondaryButtonStyle}"/>
                                    
                                    <Button Content="âœï¸"
                                           Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                           CommandParameter="{Binding Id}"
                                           ToolTip="Editar"
                                           Width="26"
                                           Height="26"
                                           Margin="2"
                                           FontSize="11"
                                           Style="{StaticResource SecondaryButtonStyle}"/>
                                    
                                    <Button Content="ðŸ—‘ï¸"
                                           Command="{Binding DataContext.ExcluirCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                           CommandParameter="{Binding Id}"
                                           ToolTip="Excluir"
                                           Width="26"
                                           Height="26"
                                           Margin="2"
                                           FontSize="11"
                                           Style="{StaticResource DangerButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Mensagem de lista vazia -->
        <Border Grid.Row="2"
               Background="Transparent"
               Visibility="{Binding Cartoes.Count, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="ðŸ’³"
                          FontSize="64"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Nenhum cartÃ£o cadastrado"
                          FontSize="18"
                          Foreground="{StaticResource TextSecondaryColor}"
                          HorizontalAlignment="Center"/>
                <Button Content="Cadastrar Primeiro CartÃ£o"
                       Command="{Binding NovoCartaoCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3"
               Background="#80000000"
               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Carregando..."
                      Foreground="White"
                      FontSize="20"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

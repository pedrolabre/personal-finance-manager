<!-- PendenciaFormView.xaml -->
<UserControl x:Class="PersonalFinanceManager.Views.Pendencias.PendenciaFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="950">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Título -->
            <TextBlock Grid.Row="0" 
                      Text="{Binding Titulo}"
                      Style="{StaticResource TitleTextBlockStyle}"
                      Margin="0,0,0,30"/>
            
            <!-- Formulário -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <!-- Nome -->
                    <TextBlock Text="Nome *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                            Height="40"
                            Padding="10"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Margin="0,0,0,20"/>
                    
                    <!-- Descrição -->
                    <TextBlock Text="Descrição" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding Descricao, UpdateSourceTrigger=PropertyChanged}"
                            Height="80"
                            Padding="10"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Margin="0,0,0,20"/>
                    
                    <!-- Valor e Tipo -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Valor Total -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Valor Total *" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding ValorTotal, UpdateSourceTrigger=PropertyChanged}"
                                    Height="40"
                                    Padding="10"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"/>
                        </StackPanel>
                        
                        <!-- Data de Vencimento -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Data de Vencimento *" Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker SelectedDate="{Binding DataVencimento}"
                                       Height="40"
                                       Padding="10,0"
                                       BorderBrush="{StaticResource BorderColor}"
                                       BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Tipo de Dívida e Prioridade -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Tipo de Dívida -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tipo de Dívida *" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding TiposDivida}"
                                     SelectedItem="{Binding TipoDivida}"
                                     Height="40"
                                     Padding="10,0"
                                     BorderBrush="{StaticResource BorderColor}"
                                     BorderThickness="1"/>
                        </StackPanel>
                        
                        <!-- Prioridade -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Prioridade" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Prioridades}"
                                     SelectedItem="{Binding Prioridade}"
                                     Height="40"
                                     Padding="10,0"
                                     BorderBrush="{StaticResource BorderColor}"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Status -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Status" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding StatusList}"
                                     SelectedItem="{Binding Status}"
                                     Height="40"
                                     Padding="10,0"
                                     BorderBrush="{StaticResource BorderColor}"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Cartão de Crédito -->
                    <StackPanel Visibility="{Binding MostrarCartao, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,0,0,20">
                        <TextBlock Text="Cartão de Crédito" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Cartoes}"
                                 SelectedItem="{Binding CartaoSelecionado}"
                                 DisplayMemberPath="Nome"
                                 Height="40"
                                 Padding="10,0"
                                 BorderBrush="{StaticResource BorderColor}"
                                 BorderThickness="1"/>
                    </StackPanel>
                    
                    <!-- Parcelada -->
                    <CheckBox IsChecked="{Binding Parcelada}"
                             Content="Esta pendência é parcelada"
                             Margin="0,0,0,10"/>
                    
                    <!-- Campos de Parcelamento (visíveis apenas se Parcelada=true) -->
                    <StackPanel Visibility="{Binding MostrarCamposParcelas, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Quantidade de Parcelas -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Quantidade de Parcelas *" 
                                          Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Text="{Binding QuantidadeParcelas, UpdateSourceTrigger=PropertyChanged}"
                                        Height="40"
                                        Margin="0,0,0,15"/>
                            </StackPanel>
                            
                            <!-- Intervalo entre Parcelas -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Intervalo (dias) *" 
                                          Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Text="{Binding IntervaloDiasParcelas, UpdateSourceTrigger=PropertyChanged}"
                                        Height="40"
                                        Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Ex: 12 parcelas com intervalo de 30 dias = 1 parcela por mês"
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  Margin="0,5,0,10"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
            <!-- Botões de Ação -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       Margin="0,20,0,0">
                <Button Content="Cancelar"
                       Command="{Binding CancelarCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Width="120"
                       Height="40"
                       Margin="0,0,10,0"/>
                
                <Button Content="Salvar"
                       Command="{Binding SalvarCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Width="120"
                       Height="40"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

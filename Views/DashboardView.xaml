<!-- DashboardView.xaml -->
<UserControl
    x:Class="PersonalFinanceManager.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Título -->
            <TextBlock Text="Dashboard" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,20"/>
            
            <!-- Cards de Resumo -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                <!-- Total de Dívidas -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="Total de Dívidas" 
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding TotalDividas, StringFormat=C2}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource DangerColor}"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Pago -->
                <Border Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="Total Pago" 
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding TotalPago, StringFormat=C2}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessColor}"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Restante -->
                <Border Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="Restante" 
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding TotalRestante, StringFormat=C2}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource WarningColor}"/>
                    </StackPanel>
                </Border>
                
                <!-- Recebimentos -->
                <Border Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="Recebimentos Esperados" 
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding TotalRecebimentosEsperados, StringFormat=C2}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            
            <!-- Progresso de Pagamento -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Progresso de Pagamento" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding PercentualPago, StringFormat={}{0:F1}%}" 
                                   HorizontalAlignment="Right"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"/>
                    </Grid>
                    <ProgressBar Value="{Binding PercentualPago, Mode=OneWay}" 
                                 Maximum="100" 
                                 Height="20"
                                 Foreground="{StaticResource SuccessColor}"
                                 Background="#E0E0E0"/>
                </StackPanel>
            </Border>
            
            <!-- Estatísticas e Próximos Vencimentos -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Estatísticas -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Estatísticas" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Pendências Totais" Foreground="{StaticResource TextSecondaryColor}"/>
                            <TextBlock Text="{Binding QuantidadePendencias}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Pendências Atrasadas" Foreground="{StaticResource DangerColor}"/>
                            <TextBlock Text="{Binding QuantidadeAtrasadas}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DangerColor}"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Próximos Vencimentos (30 dias)" Foreground="{StaticResource TextSecondaryColor}"/>
                            <TextBlock Text="{Binding QuantidadeProximosVencimentos}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Valor Próximos Vencimentos" Foreground="{StaticResource TextSecondaryColor}"/>
                            <TextBlock Text="{Binding ValorProximosVencimentos, StringFormat=C2}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource WarningColor}"/>
                        </Grid>
                        
                        <Separator Margin="0,10"/>
                        
                        <Grid Margin="0,10,0,10">
                            <TextBlock Text="Recebimentos Recebidos" Foreground="{StaticResource TextSecondaryColor}"/>
                            <TextBlock Text="{Binding TotalRecebimentosRecebidos, StringFormat=C2}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource SuccessColor}"/>
                        </Grid>
                        
                        <Grid>
                            <TextBlock Text="Recebimentos Atrasados" Foreground="{StaticResource DangerColor}"/>
                            <TextBlock Text="{Binding QuantidadeRecebimentosAtrasados}" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DangerColor}"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Próximos Vencimentos -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Próximos Vencimentos" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding ProximosVencimentos}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Descrição" 
                                                    Binding="{Binding NomePendencia}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Vencimento" 
                                                    Binding="{Binding DataVencimento, StringFormat=dd/MM/yyyy}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Valor" 
                                                    Binding="{Binding Valor, StringFormat=C2}" 
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="4"
                   Background="#80FFFFFF"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Carregando..."
                          FontSize="20"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
